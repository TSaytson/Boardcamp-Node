generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id   Int    @id @default(autoincrement())
  name String @unique
  games games[]
}

model customers {
  id       Int      @id @default(autoincrement())
  name     String
  phone    String
  cpf      String   @db.VarChar(11)
  birthday DateTime @db.Date
  rentals  rentals[]
}

model games {
  id          Int    @id @default(autoincrement())
  name        String @unique
  image       String
  stockTotal  Int
  categories  categories @relation(fields: [categoryId], references: [id])
  categoryId  Int
  pricePerDay Int
  rentals     rentals[]
}

model rentals {
  id            Int       @id @default(autoincrement())
  customerId    Int       
  customers     customers @relation(fields: [customerId], references: [id])
  gameId        Int       
  games         games     @relation(fields: [gameId], references: [id])
  rentDate      DateTime  @db.Date
  daysRented    Int
  returnDate    DateTime? @db.Date
  originalPrice Int
  delayFee      Int?
}
