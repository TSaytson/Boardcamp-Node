{
  "name": "boardcamp-node",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "engines": {
    "node": "<=18.18.2"
  },
  "scripts": {
    "build": "pnpm tsc",
    "start": "node dist/src/server.js",
    "dev": "pnpm dev:load-envs nodemon src/server.ts",
    "deploy:migration:generate": "docker exec node_app pnpm dlx prisma migrate dev",
    "migration:run": "prisma migrate deploy",
    "dev:migration:generate": "pnpm dev:load-envs prisma migrate dev",
    "dev:load-envs": "dotenv -e .env.development",
    "test:load-envs": "dotenv -e .env.test",
    "test:migration:generate": "pnpm test:load-envs prisma migrate dev",
    "test": "pnpm test:load-envs jest -- --verbose",
    "test:coverage": "pnpm test -- --coverage"
  },
  "prisma": {
    "seed": "pnpm dev:load-envs -- ts-node prisma/seed.prisma.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "6.2.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-transform-paths": "^3.5.3"
  },
  "dependencies": {
    "@prisma/client": "6.2.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "nodemon": "^3.1.9",
    "zod": "3.21.4"
  }
}
